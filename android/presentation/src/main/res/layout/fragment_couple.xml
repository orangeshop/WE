<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".couple.CoupleFragment">

        <include
            android:id="@+id/ic_title"
            layout="@layout/include_we_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@{@string/couple_register}" />


            <EditText
                android:id="@+id/et_input_couple"
                style="@style/suite_regular_16"
                android:layout_width="270dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:background="@drawable/rectangle_white_10_stroke_1_we_brown"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ic_title"
                app:layout_constraintEnd_toStartOf="@+id/tv_input_complete"
                android:layout_marginBottom="10dp"
                android:paddingVertical="19dp"
                android:paddingStart="20dp"
                android:textColorHint="@color/we_brown"

            />

            <TextView
                android:id="@+id/tv_input_complete"
                style="@style/suite_extra_bold_24"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:background="@drawable/rectangle_we_pink_10"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/et_input_couple"
                app:layout_constraintTop_toTopOf="@+id/et_input_couple"
                app:layout_constraintBottom_toBottomOf="@id/et_input_couple"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="검색"
                android:textColor="@color/white"
                android:layout_marginEnd="20dp"
            />

        <TextView
            android:id="@+id/tv_couple_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연인"
            app:layout_constraintTop_toBottomOf="@id/et_input_couple"
            app:layout_constraintStart_toStartOf="@id/et_input_couple"
            style = "@style/suite_bold_20"
            android:layout_marginTop="24dp"
        />

        <View
            android:id="@+id/v_couple_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_couple_title"
            android:background="@color/we_brown"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="22dp"
            android:layout_marginVertical="10dp"
        />

        <TextView
            android:id="@+id/tv_couple_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최영호"
            app:layout_constraintTop_toBottomOf="@id/v_couple_line"
            app:layout_constraintStart_toStartOf="@id/v_couple_line"
            style = "@style/suite_bold_20"
            android:layout_marginVertical="10dp"
        />

        <TextView
            android:id="@+id/tv_couple_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ssafy@ssafy.com"
            app:layout_constraintTop_toBottomOf="@id/tv_couple_name"
            app:layout_constraintStart_toStartOf="@id/tv_couple_name"
            style = "@style/suite_bold_12"
        />

        <TextView
            android:id="@+id/tv_couple_register"
            style="@style/suite_extra_bold_24"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:background="@drawable/rectangle_we_pink_10"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/tv_couple_name"
            app:layout_constraintEnd_toEndOf="@+id/v_couple_line"
            app:layout_constraintBottom_toBottomOf="@id/tv_couple_email"
            android:text="등록"
            android:textColor="@color/white"
        />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>