<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".account.AccountTransferFragment">

        <ImageView
            android:id="@+id/iv_account_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_left"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_account_back"
            app:layout_constraintStart_toEndOf="@id/iv_account_back"
            android:text="@string/account_register"
            android:layout_marginStart="14dp"
            style="@style/suite_regular_20"
            />

        <TextView
            android:id="@+id/tv_account_transfer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_account_back"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="84dp"
            android:layout_marginStart="20dp"
            android:text="oo 은행 입금내역을 확인하고"
            style="@style/suite_semibold_20"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_account_transfer_title"
            app:layout_constraintStart_toStartOf="parent"
            android:text="4자리 문자를 입력해주세요."
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            style="@style/suite_semibold_20"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_account_transfer_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
        >
            <EditText
                android:id="@+id/et_transfer_number_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="1"

            />


            <EditText
                android:id="@+id/et_transfer_number_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="1"
                />


            <EditText
                android:id="@+id/et_transfer_number_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:nextFocusLeft="@id/et_transfer_number_4"
                />


            <EditText
                android:id="@+id/et_transfer_number_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="1"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_register_account"
            style="@style/suite_extra_bold_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/rectangle_we_pink_10"
            android:gravity="center"
            android:paddingVertical="11dp"
            android:text="인증 완료"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>